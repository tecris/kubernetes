{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"tomcat8",
      "labels":{
         "name":"tomcat8"
      }
   },
   "spec":{
      "replicas":1,
      "selector":{
         "name":"tomcat8"
      },
      "template":{
         "metadata":{
            "labels":{
               "name":"tomcat8"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"tomcat8",
                  "image":"docker.nuc:5000/tomcat8",
                  "ports":[
                     {
                        "containerPort":8080,
                        "protocol":"TCP"
                     }
                  ]
               }
            ]
         }
      }
   }
}

